<h1 class="title">Result</h1>

<ul class="result">
  {{#each result}}
  <img src={{imageLinks.smallThumbnail}}
  alt="Book cover">
  <p class="title">{{title}}</p>
  <p class="authors">{{authors}}</p>
  <p>{{publisher}}, {{publishedDate}}, {{pageCount}} pages</p>
  <p>{{#each industryIdentifiers}} 
    <p>{{type}}: {{identifier}} </p>
    {{/each}}</p>
  {{/each}}
</ul>

<form method="post">
  <button type="submit" class="big-thumb-button" href="/">Add to Library</button>
  <button type="submit" class="big-thumb-button" href="/">Borrow book</button>
</ul>




